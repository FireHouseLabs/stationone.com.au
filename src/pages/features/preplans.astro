---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Pre-Plans - StationOne',
  description: 'Develop comprehensive emergency response documents for buildings and sites with interactive mapping, hazmat tracking, and real-time collaboration.',
};
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Hero
    callToAction={{ text: 'Start Free Trial', href: 'https://app.stationone.com.au/register', icon: 'tabler:rocket' }}
    callToAction2={{ text: 'Learn More', href: '#features' }}
  >
    <Fragment slot="title">
      Critical Information When You <span class="text-secondary dark:text-white highlight">Need It</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        Build comprehensive pre-plans with businesses, property owners, and stakeholders. Arm first responders with
        live, real-time situational intelligence before, during, and after any incident.
      </span>
    </Fragment>
  </Hero>

  <!-- Core Capabilities -->
  <Features2
    id="features"
    title="Comprehensive Pre-Planning Features"
    subtitle="Everything you need to develop and maintain effective emergency response plans"
    tagline="Core Capabilities"
    items={[
      {
        title: 'Site Documentation',
        description: 'Record facility details including company name, address, GPS coordinates, occupancy numbers, operational hours, and emergency contacts.',
        icon: 'tabler:building',
      },
      {
        title: 'Building Details',
        description: 'Document building names, dimensions (length, width, height), construction materials, assembly areas, and plant room locations.',
        icon: 'tabler:dimensions',
      },
      {
        title: 'Hazardous Materials Tracking',
        description: 'Log dangerous goods with UN numbers, proper shipping names, hazard classifications, quantities, and storage locations linked to national databases.',
        icon: 'tabler:biohazard',
      },
      {
        title: 'Service Isolation Points',
        description: 'Map critical shutoff points for electricity, gas, water, and solar systems to enable rapid emergency response.',
        icon: 'tabler:power',
      },
      {
        title: 'Interactive Mapping',
        description: 'Drag-and-drop marker positioning and polygon zones for hazmat areas, exclusion zones, and building outlines on satellite imagery.',
        icon: 'tabler:map-pin',
      },
      {
        title: 'Media Management',
        description: 'Attach site photos, floor plans, and fire service documents with descriptions and source tracking.',
        icon: 'tabler:photo',
      },
      {
        title: 'Automated Review Cycles',
        description: '12-month review cycles with automated reminders to ensure pre-plans stay current and accurate.',
        icon: 'tabler:calendar-repeat',
      },
      {
        title: 'Secure Sharing',
        description: 'Share pre-plans across units within organizations and publish to public brigade pages with restricted access to sensitive data.',
        icon: 'tabler:lock',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- Site Intelligence -->
  <Content
    tagline="Real-Time Intelligence"
    title="Ensure Everyone Has the Same Information"
    items={[
      {
        title: 'Up-to-Date Information En-Route',
        description: 'All supporting appliances access real-time, current versions of pre-plans, providing vital information before arrival.',
      },
      {
        title: 'Familiarize Crews with Site Plans',
        description: 'Crews can review site layouts, potential exposures, utility isolation points, and available fire service equipment while responding.',
      },
      {
        title: 'Plan Initial Attack',
        description: 'Annotate location maps and share with all appliances en-route, detailing entry points and initial attack strategies.',
      },
      {
        title: 'Reduce Response Time',
        description: 'Eliminate uncertainty and improve decision-making with comprehensive pre-incident intelligence.',
      },
    ]}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Get an Overview Before You Arrive
      </h3>
      Pre-plans provide responding crews with critical information about buildings and sites, helping them prepare
      effective strategies before arriving on scene.
    </Fragment>
  </Content>

  <!-- Hazmat & Safety -->
  <Content
    isReversed
    tagline="Safety First"
    title="Comprehensive Hazmat Documentation"
    items={[
      {
        title: 'UN Numbers & Proper Shipping Names',
        description: 'Link dangerous goods to national databases with complete hazard identification and classification.',
      },
      {
        title: 'Quantity & Storage Location',
        description: 'Track where hazardous materials are stored and in what quantities for better risk assessment.',
      },
      {
        title: 'Visual Mapping',
        description: 'Define hazmat zones with polygon overlays on satellite imagery for clear spatial understanding.',
      },
      {
        title: 'Exclusion Zones',
        description: 'Mark areas that must be avoided or require special precautions during emergency response.',
      },
    ]}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Identify Critical Hazards
      </h3>
      Document and visualize dangerous goods, hazardous areas, and exclusion zones to protect responding crews and
      improve incident outcomes.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Collaboration -->
  <Content
    tagline="Community Collaboration"
    title="Engage Property Owners & Stakeholders"
    items={[
      {
        title: 'Premises Contact Review',
        description: 'Send secure token-based review requests to property contacts for regular updates and verification.',
      },
      {
        title: 'Stakeholder Updates',
        description: 'Enable businesses and property owners to update critical information that is shared with fire services in real-time.',
      },
      {
        title: 'Encrypted Sensitive Data',
        description: 'Store alarm codes and other sensitive information with encryption and limited visibility controls.',
      },
      {
        title: 'Public Brigade Pages',
        description: 'Publish pre-plans to public-facing brigade pages while restricting access to confidential details.',
      },
    ]}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Keep Information Current
      </h3>
      Collaborate with property owners and businesses to maintain accurate, up-to-date pre-plans without creating
      additional administrative burden for your brigade.
    </Fragment>
  </Content>

  <!-- Multiple Buildings -->
  <Content
    isReversed
    tagline="Complex Sites"
    title="Support for Multi-Building Sites"
    items={[
      {
        title: 'Multiple Buildings Per Site',
        description: 'Document large facilities with multiple structures, each with its own specifications and details.',
      },
      {
        title: 'Building Dimensions',
        description: 'Record accurate measurements for length, width, and height in metres for size-up calculations.',
      },
      {
        title: 'Construction Materials',
        description: 'Document building materials to inform fire behavior expectations and tactical decisions.',
      },
      {
        title: 'Assembly Areas',
        description: 'Identify designated assembly points for occupants during evacuations.',
      },
    ]}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Handle Large & Complex Properties
      </h3>
      Whether it's a single building or a sprawling industrial complex, StationOne's pre-planning system scales to
      meet your needs.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Call to Action -->
  <CallToAction
    callToAction={{
      text: 'Start Your Free Trial',
      href: 'https://app.stationone.com.au/register',
      icon: 'tabler:rocket',
    }}
    callToAction2={{
      text: 'Contact Sales',
      href: '/#contact',
    }}
  >
    <Fragment slot="title">
      Ready to improve your pre-planning?
    </Fragment>

    <Fragment slot="subtitle">
      Join fire services using StationOne to build comprehensive pre-plans, collaborate with stakeholders, and arm
      crews with critical information before they arrive on scene.
    </Fragment>
  </CallToAction>
</Layout>
