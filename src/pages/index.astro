---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Contact from '~/components/widgets/Contact.astro';

const metadata = {
  title: 'StationOne - Streamline your firefighting operations.',
  dontUseTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    callToAction={{ text: 'Start free trial', href: 'https://app.stationone.com.au/register', icon: 'tabler:firetruck' }}
    callToAction2={{ text: 'See how it works ↓', href: '#features' }}
    image={{ src: import('~/assets/images/hero-image.png'), alt: 'StationOne Hero Image' }}
  >
    <Fragment slot="title">
      The only inspection platform built for
      <span class="text-secondary dark:text-white highlight">fire brigades</span>. Pay per brigade, not per user.
      $16/month flat.
    </Fragment>

    <Fragment slot="subtitle">
      Paper inspections get filed and forgotten. Spreadsheets don't get updated. StationOne turns your weekly checks
      into tracked, actioned, compliant records — on any device, for every member of your brigade.
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note />

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Benefits of Using StationOne"
    title="Why fire services choose StationOne"
    subtitle="StationOne helps fire services work smarter, not harder. Giving you more time to focus on protecting your community."
    items={[
      {
        title: 'Save Time',
        description:
          'Reduce hours spent on paperwork, manual tracking, and administrative tasks. Focus on what matters most; protecting your community.',
        icon: 'tabler:clock',
      },
      {
        title: 'Improve Safety',
        description:
          'Ensure crews have accurate, up-to-date information when it matters most. Better data means better decisions on the incident ground.',
        icon: 'tabler:shield-check',
      },
      {
        title: 'Stay Compliant',
        description:
          'Never miss an inspection, qualification expiry, or compliance deadline. Automated tracking and reminders keep your brigade audit-ready.',
        icon: 'tabler:certificate',
      },
      {
        title: 'Real-Time Access',
        description:
          'Access critical information from anywhere: station, vehicle, or incident scene. Works offline and syncs when connected.',
        icon: 'tabler:cloud',
      },
      {
        title: 'Reduce Admin Burden',
        description:
          'Eliminate duplicate data entry and paper-based processes. Volunteers spend less time on admin and more time on training and operations.',
        icon: 'tabler:file-minus',
      },
      {
        title: 'Single Source of Truth',
        description:
          'No more information silos or outdated spreadsheets. Everyone works from the same data, ensuring consistency across your organisation.',
        icon: 'tabler:database',
      },
    ]}
  />

  <CallToAction
    id="feedback"
    callToAction={{
      text: 'View Roadmap',
      href: 'https://stationone.canny.io/',
      icon: 'tabler:map',
    }}
  >
    <Fragment slot="title">
      Have an <br class="block sm:hidden" /><span class="sm:whitespace-nowrap">idea?</span>
    </Fragment>

    <Fragment slot="subtitle">
      We're always looking to improve StationOne. Submit a feature request or view our public roadmap to see what's
      coming next.
    </Fragment>
  </CallToAction>

  <!-- Features2 Widget - Available Today ************** -->

  <Features2
    title="Powerful Features for Modern Fire Services"
    subtitle="Everything you need to streamline operations, improve safety, and enhance collaboration across your fire service."
    tagline="Features"
    id="details"
    items={[
      {
        title: 'Hose Manager',
        description: 'Manage your hose inventory including full service history and locations.',
        icon: 'tabler:spiral',
      },
      {
        title: 'Inspections & Audits',
        description: 'Equipment inventory, inspections, auditing and fault reporting.',
        icon: 'tabler:clipboard-list',
      },
      {
        title: 'Actions & Tasks',
        description: 'Manage actions and tasks including assignments and progress tracking.',
        icon: 'tabler:subtask',
      },
      {
        title: 'Member Management',
        description: 'Roster and manage crews, maintain qualifications, endorsements and competencies.',
        icon: 'tabler:users',
      },
      {
        title: 'Calendar & Events',
        description: 'Manage events, vehicle bookings and training schedules all in one place.',
        icon: 'tabler:calendar-event',
      },
      {
        title: 'Hydrants',
        description: 'Map and manage all hydrants in your response area with inspection tracking.',
        icon: 'tabler:fire-hydrant',
      },
      {
        title: 'Stock Management',
        description: 'Manage your stock inventory including quantities, locations, and reorder alerts.',
        icon: 'tabler:abacus',
      },
      {
        title: 'Pre-Plans',
        description: 'Develop, share and collaborate on pre-plans for significant risks.',
        icon: 'tabler:clipboard-check',
      },
      {
        title: 'Public Access',
        description: 'Share brigade info and conduct inspections via QR codes, no login required on any device.',
        icon: 'tabler:qrcode',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Frequently Asked Questions"
    subtitle="Find answers to common questions about StationOne and how it can help your fire service."
    tagline="FAQs"
    items={[
      {
        title: 'What do I need to get started with StationOne?',
        description:
          "All you need is an internet connection and a device (computer, tablet, or smartphone). StationOne is a cloud-based platform, so there's no software to install. Simply sign up for an account and you can start managing your station immediately.",
      },
      {
        title: 'Is StationOne suitable for volunteer fire brigades?',
        description:
          'Absolutely! StationOne is designed for both career and volunteer fire services of all sizes. Our platform helps volunteer brigades reduce administrative burden, improve compliance tracking, and ensure critical information is always accessible when needed.',
      },
      {
        title: 'How secure is our data on StationOne?',
        description:
          'Security is our top priority. StationOne uses industry-standard encryption for data in transit and at rest. We host our infrastructure on secure, enterprise-grade servers with regular backups. Access controls ensure that only authorized members can view sensitive information.',
      },
      {
        title: 'Can we access StationOne on mobile devices in the field?',
        description:
          "Yes! StationOne is fully responsive and works seamlessly on smartphones and tablets. Firefighters can access pre-plans, complete inspections, and update information from any device, whether they're at the station or responding to an incident.",
      },
      {
        title: 'What kind of support and training do you provide?',
        description:
          'We provide comprehensive onboarding support including video tutorials, documentation, and direct assistance from our team. We work with you to ensure your brigade is comfortable using all features and can help train your members as needed.',
      },
      {
        title: 'Can we import our existing data into StationOne?',
        description:
          'Yes, we can help you migrate existing data from spreadsheets, other systems, or paper records into StationOne. Our team will work with you to ensure a smooth transition and minimal disruption to your operations.',
      },
    ]}
  />

  <!-- Stats Widget ******************

  <Stats
    items={[
      { name: 'Downloads', value: '132K' },
      { name: 'Stars', value: '24.8K' },
      { name: 'Forks', value: '10.3K' },
      { name: 'Users', value: '48.4K' },
    ]}
  />
-->

  <Contact
    id="contact"
    tagline="Get in Touch"
    title="Contact StationOne"
    subtitle="Do you want to know more about StationOne? Have questions or feedback on StationOne features? Interested in investing? Let's talk!"
  />
</Layout>
